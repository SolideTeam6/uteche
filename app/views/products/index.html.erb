<p id="notice"><%= notice %></p>

<h1>Productos</h1>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Marca</th>
            <th>Precio</th>
            <th>Imagen</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @products.each do |product| %>
        <tr>
            <td><%= product.nombre %></td>
            <td><%= product.marca %></td>
            <td><%= product.precio %></td>
            <td><%= image_tag product.imagen.thumb.url %></td>
            <td><%= link_to 'Show', product,class:"btn btn-raised btn-primary" %></td>
            <td><%= link_to 'Edit', edit_product_path(product),class:"btn btn-raised btn-info" %></td>
            <td><%= link_to 'Destroy', product,class:"btn btn-raised btn-warning", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

